# Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# Database Configuration
POSTGRES_DB=mortgage-ai
POSTGRES_USER=user
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql+asyncpg://user:changeme@localhost:5432/mortgage-ai
DB_ECHO=false

# API Configuration
DEBUG=true
ALLOWED_HOSTS=["http://localhost:3000","http://localhost:5173"]

# Keycloak Configuration
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=mortgage-ai
KEYCLOAK_CLIENT_ID=mortgage-ai-api
KEYCLOAK_CLIENT_ID_UI=mortgage-ai-ui

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# MinIO / Object Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=mortgage-documents
MINIO_USE_SSL=false

# LLM Configuration (default provider)
LLM_PROVIDER=openai
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=sk-your-api-key-here
LLM_MODEL=gpt-4o
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# UI Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=mortgage-ai
VITE_KEYCLOAK_CLIENT_ID=mortgage-ai-ui
VITE_ENVIRONMENT=development

# OpenShift/Deployment Configuration
# These are used by make deploy
# REGISTRY_URL is auto-detected from oc registry info if not set
# REGISTRY_URL=default-route-openshift-image-registry.apps.example.com
NAMESPACE=mortgage-ai
IMAGE_TAG=latest
